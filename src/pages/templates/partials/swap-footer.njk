<div class="swap-footer">
  <div class="swap-footer__container">
    <div class="swap-footer__links">
      <div class="swap-footer__block swap-footer__block--company">
        <h4>Company</h4>

        <ul class="swap-footer__list swap-footer__list--company">
          {% set links = [
            { name: 'Careers', ref: '//wiki.swap.online/careers-swap-online/'},
            { name: 'Use swap.button', ref: '//wiki.swap.online/about-swap-online/#b2b'},
            { name: 'About Us', ref: '//wiki.swap.online/about-swap-online/'},
            { name: 'Swap.Online Chrome Extension', ref: '//chrome.google.com/webstore/detail/swaponline/oldojieloelkkfeacfinhcngmbkepnlm'}
            ] %}

            {% for link in links %}
            <li>
              <a href="{{ link.ref }}" target="_blank">
                {{ link.name }}
              </a>
            </li>
            {% endfor %}
        </ul>
      </div>

      <div class="swap-footer__block swap-footer__block--docs">
        <h4>Documentation</h4>

        <ul class="swap-footer__list swap-footer__list--docs">
          {% set links = [
            { name: 'Concept (PDF)', ref: '//wiki.swap.online/en.pdf'},
            { name: 'White Paper (draft)', ref: '//docs.google.com/document/d/1XNLzmNXkFeJWveJp62vFPQdjH8xabpeSm6ifbgj4MeM/edit?usp=sharing'},
            { name: 'Details of Our DEX', ref: '//www.reuters.com/brandfeatures/venture-capital/article?id=37488'},
            { name: 'DEX Trend Research', ref: '//docs.google.com/spreadsheets/d/1qWFLK2y8oMH5Gfam-iwqXPzLtwNabzp_EL6QFxjSBc0/edit?usp=sharing'}
            ] %}

            {% for link in links %}
            <li>
              <a href="{{ link.ref }}" target="_blank">
                {{ link.name }}
              </a>
            </li>
            {% endfor %}
        </ul>
      </div>

      <div class="swap-footer__block swap-footer__block--res">
        <h4>Resources</h4>

        <ul class="swap-footer__list swap-footer__list--res">
          {% set links = [
            { name: 'Wiki', ref: '//wiki.swap.online'},
            { name: 'Send Bitcoin Transacton', ref: '//bitcointalk.org/index.php?topic=1938621.0'},
            { name: 'github/swap.core', ref: '//github.com/swaponline/swap.core'},
            { name: 'github/swap.button', ref: '//github.com/swaponline/swap.button'}
            ] %}

            {% for link in links %}
            <li>
              <a href="{{ link.ref }}" target="_blank">
                {{ link.name }}
              </a>
            </li>
            {% endfor %}
        </ul>
      </div>

      <div class="swap-footer__block swap-footer__block--legal">
        <h4>Legal</h4>

        <ul class="swap-footer__list swap-footer__list--legal">
          {% set links = [
            { name: 'Terms', ref: '//drive.google.com/file/d/0Bz2ZwZCmFtj_Nm9qSm0tUm9Ia1kwVGhWRlVlVXRJTGZtYW5N/view?usp=sharing'},
            { name: 'Privacy Policy', ref: '//drive.google.com/file/d/1LdsCOfX_pOJAMqlL4g6DfUpZrGF5eRe9/view?usp=sharing'},
            { name: 'Contacts', ref: '//wiki.swap.online/contacts-swap-online/'},
            { name: 'Legal Opinion', ref: '//drive.google.com/file/d/0Bz2ZwZCmFtj_WlNkY0ZYN0ZpNUo2VFVEeW9rWEVoTlNja0VZ/view?usp=sharing'}
            ] %}

            {% for link in links %}
            <li>
              <a href="{{ link.ref }}" target="_blank">
                {{ link.name }}
              </a>
            </li>
            {% endfor %}
        </ul>
      </div>
    </div>

    <ul class="swap-footer__socials">
      {% set links = [
        { ref: '//medium.com/swaponline', icon: 'fa-medium-m'  },
        { ref: '//twitter.com/SwapOnlineTeam', icon: 'fa-twitter'  },
        { ref: '//www.facebook.com/pg/Swaponline-637233326642691', icon: 'fa-facebook'  },
        { ref: '//t.me/swaponline', icon: 'fa-telegram-plane'  },
        { ref: '//bitcointalk.org/index.php?topic=4636633.0', icon: 'fa-btc' },
        { ref: '//discordapp.com/invite/juG7UZH', icon: 'fa-discord'}
      ] %}

      {% for l in links %}
        <li>
          <a href="{{ l.ref }}">
            <i class="swap-footer__icon fab {{ l.icon }}"></i>
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>
